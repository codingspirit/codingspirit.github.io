//Override next/source/css/_schemes/Mist/_layout.styl Start
.main-inner {
  margin-top: 30px;
  margin-bottom: 30px;
  border: 10px solid rgba(200, 200, 200, 0.3);
  padding: 30px;
  background: #F8F8FF;
  opacity: 0.95;
  border-radius: 30px;
  width: 1000px;

  +mobile() {
    width: auto;
