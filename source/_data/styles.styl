//Override next/source/css/_schemes/Mist/_header.styl Start
.header {
  background: #1C1C1C;
}

.header-inner {
  align-items: center;
  background: #1C1C1C;
  display: flex;
  justify-content: center;
  padding: 20px 0;
  clearfix();

  +mobile() {
    display: block;
    padding: 10px;
    width: auto;
  }
}

.site-meta {
  float: left;
  line-height: normal;
  margin-left: -20px;

  +mobile() {
    margin-left: 10px;
  }

  .brand {
    background: none;
    padding: 2px 1px;

    +mobile() {
      display: block;
    }
  }

  .site-subtitle {
    color: #FFFFFF;
  }

  .site-title {
    font-weight: bolder;
    color: #FFFFFF
  }
}

.logo-line-before, .logo-line-after {
  display: block;
  margin: 0 auto;
  overflow: hidden;
  width: 75%;

  +mobile() {
    display: none;
  }

  i {
    background: #F8F8FF;
    display: block;
    height: 2px;
    position: relative;

    +mobile() {
      height: 3px;
    }
  }
}

.site-subtitle {
  display: block;
}
//Override next/source/css/_schemes/Mist/_header.styl End

//Override next/source/css/_schemes/Mist/_menu.styl Start
.menu {
  margin: 0;

  +mobile() {
    margin: 10px 0;
    padding: 0;
  }

  .menu-item {
    margin: 0;

    +mobile() {
      display: block;
      margin-top: 5px;
    }

    a, span.exturl {
      border-radius: 2px;
      color: #FFFFFF;
      background: none;
      padding: 0 10px;
      transition-property: background,color;

      +mobile() {
        text-align: left;
      }

      &:hover {
        background: #FFFFFF;
        color: #000000;
      }
    }

    .badge {
      background: white;
      border-radius: 10px;
      color: $black-light;
      padding: 1px 4px;
      text-shadow: 1px 1px 0 rgba(0, 0, 0, .1);
    }
  }
}
//Override next/source/css/_schemes/Mist/_menu.styl End

